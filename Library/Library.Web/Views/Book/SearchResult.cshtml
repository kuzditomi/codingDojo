@model List<Library.Contracts.Models.Book>

@{
    Layout = null;
}
<div>
    @if (@Model.Count != 0)
    {
        <br />
        <table>
            <tr>
                <th>ID</th>
                <th>Title</th>
                <th>Author</th>
                <th>Year</th>
                <th>Reader</th>
            </tr>

            @foreach (var book in Model)
            {
                <tr>
                    <td>@book.Id</td>
                    <td>@book.Title</td>
                    <td>@book.Author</td>
                    <td>@book.Year</td>
                    <td>@book.Reader.Name</td>
                    <td>@Html.ActionLink(" [EDIT]", "Edit", new { bookId = @book.Id })</td>
                    <td>@Html.ActionLink(" [BORROW]", "Borrow", new { bookId = @book.Id })</td>
                </tr>
            }
        </table>
    }
    else
    {
        <div>
            No suitable book found.
        </div>
    }
</div>