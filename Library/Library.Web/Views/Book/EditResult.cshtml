@model List<Library.Contracts.Models.Book>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    @if (@Model.Count != 0)
    {
        <div><h4>Successful modification</h4></div>
        <br />
        <table>
            <tr>
                <th>ID</th>
                <th>Title</th>
                <th>Author</th>
                <th>Year</th>
                <th>Reader</th>
            </tr>
            @foreach (var book in Model)
            {
                <tr>
                    <td>@book.Id</td>
                    <td>@book.Title </td>
                    <td>@book.Author </td>
                    <td>@book.Year </td>
                    <td>@book.Reader.Name </td>
                    <td>@Html.ActionLink(" [HOME]", "Index")</td>
                </tr>
            }
        </table>
    }
    else
    {
        <div><h4>Uh-oh! Something went wrong.</h4></div>
    }
</div>